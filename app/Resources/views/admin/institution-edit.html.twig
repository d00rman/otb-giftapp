{% extends 'admin.base.html.twig' %}

{% block body %}

<div class="container">
<div class="row">
        <div class="page-header">
            <h1>Institutions general - edit</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <ul class="nav nav-pills nav-stacked">
                <li class="active"><a href="institution-edit.html">General</a></li>
                <li><a href="institution-wishlist.html">Wish list</a></li>
                <li><a href="institution-needs-list.html">General needs</a></li>
                <li><a href="institution-volunteer-list.html">Volunteer</a></li>
            </ul>
        </div>
        <div class="col-md-10">
            <form action="{{ path('admin_institution_edit', {'id' : institution.getId() }) }}" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" placeholder="Name" id="name" name="name" value="{{ institution.getName() }}">
                </div>

                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" placeholder="Address" id="address" name="address" value="{{ institution.getName() }}">
                </div>

                <div class="form-group">
                    <label for="type">Type</label>
                    <select id="type" name="type" class="form-control">
                        {% for type in institutionTypes %}
                        <option {% if(institution.getType().getId() == type.getId()) %} selected="selected" {% endif %}
                        value="{{ type.getId() }}">{{ type.getType() }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <label for="name">Region</label>
                    <select id="region" name="region" class="form-control">
                        {% for region in regions %}
                        <option {% if(institution.getRegion().getId() == region.getId()) %} selected="selected" {% endif %}
                        value="{{ region.getId() }}">{{ region.getName() }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" name="submit" id="submit" class="btn btn-primary" value="EDIT">
                </div>
            </form>
        </div>
    </div>
</div> <!-- /container -->

{% endblock %}

{% block javascripts %}

<script>
    $(document).ready(function () {
        $('#confirm-delete').on('show.bs.modal', function (e) {
            $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href'));
        });
    });
</script>
{% endblock %}

